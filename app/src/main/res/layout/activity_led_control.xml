<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.led.led.ledControl">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cucina"
        android:id="@+id/textView2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp"
        android:textColor="#493535"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/boncu"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/btnDis" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/boffcu"
        android:layout_alignTop="@+id/boncu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff0000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/btnDis"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Impianto Luci:"
        android:id="@+id/textView4"
        android:autoText="false"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/bonba"
        android:layout_below="@+id/boncu"
        android:layout_alignLeft="@+id/boncu"
        android:layout_alignStart="@+id/boncu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bagno"
        android:id="@+id/textView5"
        android:layout_below="@+id/boncu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#493535" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camera"
        android:id="@+id/textView6"
        android:layout_below="@+id/bonba"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#493535" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/bonca"
        android:layout_below="@+id/bonba"
        android:layout_alignLeft="@+id/bonba"
        android:layout_alignStart="@+id/bonba"
        android:layout_alignRight="@+id/bonba"
        android:layout_alignEnd="@+id/bonba" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/boffba"
        android:layout_below="@+id/boffcu"
        android:layout_alignLeft="@+id/boffcu"
        android:layout_alignStart="@+id/boffcu"
        android:textColor="#ff0000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/boffca"
        android:layout_below="@+id/boffba"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff0000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/boffst"
        android:layout_below="@+id/boffca"
        android:layout_alignLeft="@+id/boffca"
        android:layout_alignStart="@+id/boffca"
        android:textColor="#ff0000" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/bonst"
        android:layout_below="@+id/bonca"
        android:layout_alignLeft="@+id/bonca"
        android:layout_alignStart="@+id/bonca"
        android:layout_alignRight="@+id/bonca"
        android:layout_alignEnd="@+id/bonca" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/bonsa"
        android:layout_below="@+id/bonst"
        android:layout_alignLeft="@+id/bonst"
        android:layout_alignStart="@+id/bonst"
        android:layout_alignRight="@+id/bonst"
        android:layout_alignEnd="@+id/bonst"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Studio"
        android:id="@+id/textView7"
        android:layout_below="@+id/bonca"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#493535" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Salone"
        android:id="@+id/textView8"
        android:layout_below="@+id/bonst"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#493535" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/boffsa"
        android:layout_below="@+id/boffst"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="false"
        android:textColor="#ff0000" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spegni tutto"
        android:id="@+id/BStt"
        android:layout_below="@+id/bonsa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/boffsa"
        android:layout_alignEnd="@+id/boffsa" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accendi tutto"
        android:id="@+id/BAtt"
        android:layout_below="@+id/BStt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/boffsa"
        android:layout_alignEnd="@+id/boffsa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/btnDis"
        android:layout_alignBottom="@+id/btnDis"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="attiva controllo ladri"
        android:id="@+id/Btla"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="startService" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView10"
        android:layout_above="@+id/btnDis"
        android:layout_toRightOf="@+id/textView7"
        android:layout_below="@+id/BAtt"
        android:layout_toLeftOf="@+id/boffsa"
        android:layout_toStartOf="@+id/boffsa" />


</RelativeLayout>